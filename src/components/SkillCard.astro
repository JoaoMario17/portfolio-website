---
interface Icon {
  path: string;
  name: string
}

export interface Props {
  icons: Array<Icon>;
  text: string;
}

const { icons, text } = Astro.props
---

<div class="bg-violet-600 bg-opacity-10 border-violet-600 border-2 rounded-lg py-4 px-6">
  <div class="icons-container flex">
    {icons.map((icon, index) => {
      if (index == 0) {
        return (
          <img class="w-16" src={icon.path} alt={icon.name}/>
        )
      }

      return (
        <img class="w-16 ml-[-12px]" src={icon.path} alt={icon.name}/>
      )
    })}
  </div>

  <div class="mt-3">
    <span class="text-white text-sm">{text}</span>
  </div>
</div>
